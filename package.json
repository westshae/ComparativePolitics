{
  "name": "relative-pol",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start:vite": "cd front && yarn dev",
    "start:go": "cd back && go run main.go",
    "start:native": "cd app && yarn start",
    "open:android": "cd app && yarn android",
    "start:neo4j": "cd data && docker-compose up -d",
    "stop:neo4j": "cd data && docker-compose down",
    "start": "concurrently -n vite,go,native,neo4j,android -c green,magenta,cyan,blue,green \"yarn start:vite\" \"yarn start:go\" \"yarn start:native\" \"yarn start:neo4j\" \"yarn open:android\"",
    "stop": "concurrently -n neo4j -c blue \"yarn stop:neo4j\""
    },
  "devDependencies": {
    "concurrently": "^9.0.1" 
  }
}
